<%= form_for(@recipe) do |f| %>
  <p>
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, class: "form-control" %>
  </p>

  <p>
    <%= f.label :description, "Descrição" %>
    <%= f.text_area :description, class: "form-control" %>
  </p>

  <%= f.submit "Criar receita", class: "btn btn-primary" %>
<% end %>
