<div class="col-md-3 col-sm-12">

  <div class="recipe_info">
    <%= link_to image_tag(recipe.image.url(:large)), recipe %>
    <p><%= link_to recipe.name, recipe %></p>
    <p><%= recipe.cooking_time %><%= " "+t(:minutes) %></p>
    <% if user_signed_in? %>
      <p>
        <%= link_to "Hmm"+" ("+recipe.hmms.size.to_s+")", hmm_recipe_path(recipe), method: :put %>
      </p>
    <% end %>
  </div>
</div>
