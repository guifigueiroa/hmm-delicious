<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "HmmDelicious", root_path, id: "logo" %>
    <nav>
      <%= form_tag recipes_path, method: :get, class: "navbar-form navbar-right" do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], placeholder: "Pesquisar receitas", class: "form-control" %>
          <!--%= submit_tag "Pesquisar", :name => nil, class: "btn btn-default" %-->
        </div>
      <% end %>

      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(:home), root_path %></li>

        <% if user_signed_in? %>
          <li><%= link_to t(:new_recipe), new_recipe_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t(:options) %> <b class="caret"></b>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to(t(:my_recipes), myrecipes_path ) %>
                </li>
                <li>
                  <%= link_to(t(:logout), destroy_user_session_path, :method => :delete) %>
                </li>
              </ul>
            </a>
          </li>
        <% else %>
          <li><%= link_to "Entrar", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>


